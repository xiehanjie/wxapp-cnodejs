.detail-box{
    margin: 30rpx;
    background: #FFF;
    padding: 25rpx;
    border-radius: 10rpx;
}
.detail-title{
    width: 100%;
    font-size: 32rpx;
    font-weight: bold;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.detail-user{
    display: flex;
    align-items: center;
    width: 100%;
    height: 120rpx;
    margin-top: 25rpx;
    border-top: 2rpx solid #f4f4f4;
}
.detail-user-img{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    flex-shrink: 0
}
.detail-user-detail{
    flex: 1;
    padding-left: 20rpx;
}
.detail-user-name{
    color: #1f1e27;
}
.detail-user-text{
    margin-top: 15rpx;
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #aaaaaa;
}
/**基础风格样式**/
@import '../towxml/style/main.wxss';


/**如果页面有动态主题切换，则需要将使用到的样式全部引入**/

/**主题配色（浅色样式）**/
@import '../towxml/style/theme/light.wxss';

/**主题配色（深色样式）**/
@import '../towxml/style/theme/dark.wxss';